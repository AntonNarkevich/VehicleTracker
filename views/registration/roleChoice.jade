extends ../layout

block content
	.container
		.row.centrized-vertically
			.col-md-4.col-md-offset-2
				.thumbnail
					img(src='images/registerManagerThumbnail.svg', alt="Manager registration", style='width: 100%;')
					.caption
						h3 Manager registration
						p Managers can employ drivers, register vehicle. Keep track of all vehicle movements.

						a.btn.btn-primary(href='/register/manager', role='button') Register
			.col-md-4
				.thumbnail
					img(src='images/registerDriverThumbnail.svg', alt="Driver registration", style='width: 100%;')
					.caption
						h3 Driver registration
						p Drivers can apply to be employed. Also they get vehicle to drive.

						a.btn.btn-primary(href='/register/driver', role='button') Register
